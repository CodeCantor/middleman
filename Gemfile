base_path = File.expand_path(File.dirname(__FILE__), __FILE__)

source :rubygems

gem "middleman",            :path => "#{base_path}/middleman"
gem "middleman-core",       :path => "#{base_path}/middleman-core"
gem "middleman-helpers",    :path => "#{base_path}/middleman-helpers"
gem "middleman-rendering",  :path => "#{base_path}/middleman-rendering"
gem "middleman-livereload", :path => "#{base_path}/middleman-livereload"

group :development do
  gem "cucumber", "~>1.0.2"
  gem "rake", "0.8.7"
  gem "rspec", "~>2.6.0"
  gem "coffee-filter", "~>0.1.1"
